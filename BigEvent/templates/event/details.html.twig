{% extends 'base.html.twig' %}



{% block body %}
<div class="container text-center">
<div class=" mb-5 col col-12 d-flex align-items-stretch">
        <div class="row g-1 container-fluid card shadow-lg bg-card-color">
        <img style="width:100%; height:600px; object-fit: cover;" src="{{asset('pictures/' ~ events.picture )}}" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{events.name}}</h5>
          <hr>
          <p class="card-text">Capacity: {{events.capacity}}</p>
          <p class="card-text">Contact: {{events.contactEmail}}</p>
          <p class="card-text">Phone Number: {{events.phonenumber}}</p>
          <p class="card-text">Location: {{events.cityname}}</p>
          <p class="card-text">Zip: {{events.zip}}</p>
          <p class="card-text">Address: {{events.address}}</p>
          <a href="{{events.url}}" class="card-text link-warning ">URL: {{events.url}}</a>
          <p class="card-text">Type: {{events.fk_type.typename}}</p>
          <p class="card-text">Date Time: {{events.datetime|date('F j, Y, g:i a')}}</p>
          
          <a href="/" class="btn btn-success">Go Back</a>
        </div>
      </div>
      </div>
       </div>
{% endblock %}